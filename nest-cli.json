{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/insta-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/insta-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/insta-gateway",
  "projects": {
    "insta-gateway": {
      "type": "application",
      "root": "apps/insta-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/insta-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/insta-gateway/tsconfig.app.json"
      }
    },
    "users-app": {
      "type": "application",
      "root": "apps/users-app",
      "entryFile": "main",
      "sourceRoot": "apps/users-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users-app/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "post-app": {
      "type": "application",
      "root": "apps/post-app",
      "entryFile": "main",
      "sourceRoot": "apps/post-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/post-app/tsconfig.app.json"
      }
    }
  }
}